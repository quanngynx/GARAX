{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    /* Bundler mode */
    "outDir": "./dist",
    /* Linting */
    /* Aliases with default import */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "public/*": ["./public/*"],
      "components/*": ["./components/*"]
    }
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src", "src/**/*.tsx"],
}
